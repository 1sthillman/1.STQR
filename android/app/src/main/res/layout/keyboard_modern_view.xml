<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#1C1C1E">

    <!-- Toggle Buttons - Toolbar ve Öneriler Aç/Kapa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="4dp"
        android:background="#1C1C1E">
        
        <ImageButton
            android:id="@+id/btn_toggle_suggestions"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_text_suggestions"
            android:background="@drawable/toolbar_button_bg"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:contentDescription="Öneriler Aç/Kapa" />
        
        <ImageButton
            android:id="@+id/btn_toggle_toolbar"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_expand_more"
            android:background="@drawable/toolbar_button_bg"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:contentDescription="Quick Menü Aç/Kapa" />
    </LinearLayout>

    <!-- Top Toolbar - Ortalanmış, Simetrik (Gizlenebilir) -->
    <HorizontalScrollView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:scrollbars="none"
        android:background="#1C1C1E"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/toolbar_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="6dp"
            android:paddingHorizontal="8dp">

            <ImageButton
                android:id="@+id/btn_quick_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_quick_menu"
                android:background="@drawable/toolbar_button_bg"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="Kısayollar" />

            <ImageButton
                android:id="@+id/btn_emoji"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_emoji"
                android:background="@drawable/toolbar_button_bg"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="Emoji" />

            <ImageButton
                android:id="@+id/btn_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_camera"
                android:background="@drawable/toolbar_button_bg"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="QR Kamera" />

            <ImageButton
                android:id="@+id/btn_voice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_mic"
                android:background="@drawable/toolbar_button_bg"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="Sesli Yazma" />

            <ImageButton
                android:id="@+id/btn_gif"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_gif"
                android:background="@drawable/toolbar_button_bg"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="GIF" />

            <ImageButton
                android:id="@+id/btn_translate"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_translate"
                android:background="@drawable/toolbar_button_bg"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="Çeviri" />

            <ImageButton
                android:id="@+id/btn_clipboard"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_clipboard"
                android:background="@drawable/toolbar_button_bg"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="Pano" />

            <ImageButton
                android:id="@+id/btn_mini_apps"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_apps"
                android:background="@drawable/toolbar_button_bg"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="Mini Uygulamalar" />

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ic_settings"
                android:background="@drawable/toolbar_button_bg"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:contentDescription="Ayarlar" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Candidate Suggestions (Gizlenebilir) -->
    <LinearLayout
        android:id="@+id/suggestions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        
    <com.qrmaster.app.keyboard.CandidateStripView
        android:id="@+id/candidate_strip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#202024" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/feature_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/keyboard_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>

